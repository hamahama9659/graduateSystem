<mapper namespace="com.hmis.mapper.MyPageMapper">
	
	<!-- 1. 사용자 :: 내정보확인페이지 -->
	<select id="myInfo" resultType="com.hmis.domain.UserVO">
		SELECT
		user_No, grade, state, user_Name
	    FROM
	    TBL_USER
	    WHERE user_No = #{userNo}
	</select>

	<!-- 2. 사용자 :: 내정보수정하기 -->
	<update id="myInfoUpdate">
		UPDATE
		TBL_USER
		SET 
			grade = #{grade},
			user_Name = #{userName},
			state = #{state},
			user_Pw = #{userPw}
		WHERE
			user_No = #{userNo}
	</update>
	
